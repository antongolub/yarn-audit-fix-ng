{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testEnvironment": "node",
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [],
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "testMatch": [
    "<rootDir>/test/**/*.ts"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/test/fixtures"
  ],
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx",
    "json",
    "node"
  ],
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  }
}
